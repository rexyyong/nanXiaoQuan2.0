/* General Styling */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f3f6fa; /* Light blue-grey for a cleaner look */
}

.header {
  background-color: #0073e6; /* Brighter blue for a more modern look */
  color: #fff;
  text-align: center;
  padding: 20px; 
  position: relative;
}

/* Logo image styles */
.logo {
  width: 120px;
  height: auto;
  margin: 0 auto 10px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.search-bar {
  width: 90%;
  margin: 10px auto 0;
  padding: 8px;
  border-radius: 16px;
  border: 1px solid #ccc;
  font-size: 20px;
  color: #fff; /* Text color set to white */
}

.search-bar::placeholder {
  color: #fff; /* White placeholder text */
  opacity: 1; /* Adjust opacity for better visibility */
}

/* Banner Section */
.banner {
  background-color: #ffffff;
  padding: 16px;
  text-align: center;
  margin: 16px 16px 24px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.banner-text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.banner-subtext {
  font-size: 14px;
  color: #777;
  margin-top: 8px;
}

/* Categories Section */
.categories {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* Two categories per row */
  gap: 16px;
  margin: 0 16px 24px;
}

.category {
  background-color: #1e90ff; /* Blue buttons */
  color: #fff;
  padding: 12px 16px;
  border-radius: 16px;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.category:hover {
  background-color: #005bb5; /* Darker blue on hover */
  box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
}

/* Hot Posts Section */
.hot-posts {
  padding: 16px;
  flex: 1;
  background-color: #ffffff;
  border-radius: 8px;
  margin: 0 16px 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 12px;
  color: #333;
}

.post-item {
  font-size: 14px;
  margin: 8px 0;
  color: #555;
}

/* Navbar */
.navbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  border-top: 1px solid #ddd;
  padding: 10px 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1);
}

.nav-item {
  text-align: center;
  color: #777;
  font-size: 14px;
  cursor: pointer;
}

.nav-item:hover {
  color: #1e90ff; /* Highlight blue on hover */
}
