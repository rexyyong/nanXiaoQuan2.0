/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  box-sizing: border-box;
} 

/* Navbar styles */
.navbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  border-top: 1px solid #ddd;
  padding: 10px 0;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.nav-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #333;
  padding: 5px 0;
}

.nav-item-active {
  color: #1e90ff; /* Highlight active tab */
  font-weight: bold;
}
